{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@test/*": ["./src/test/*"],
      "@services/*": ["./src/services/*"],
      "@components/*": ["./src/components/*"],
      "@utilities/*": ["./src/utilities/*"]
    }
  },
  "include": ["./src"]
}
