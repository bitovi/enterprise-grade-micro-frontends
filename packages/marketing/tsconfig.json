{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "types": ["@testing-library/jest-dom", "node"],
    "baseUrl": ".",
    "paths": {
      "@test/*": ["./src/test/*"]
    },
  },
  "include": ["src"]
}
